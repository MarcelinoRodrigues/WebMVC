@model IEnumerable<WebMVC.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <button class="btn btn-success"><a asp-action="Create">Criar Usuário</a></button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                <button class="btn btn-info">
                    <a asp-action="Edit" asp-route-id="@item.PessoaID">Edit</a> 
                </button>
                <button class="btn btn-warning">
                    <a asp-action="Details" asp-route-id="@item.PessoaID">Details</a>
                </button>
                <button class="btn btn-danger">
                    <a asp-action="Delete" asp-route-id="@item.PessoaID">Delete</a>
                </button>

            </td>
        </tr>
}
    </tbody>
</table>
